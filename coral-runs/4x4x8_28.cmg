#processor block decomposition
sms(4,4,8)
#Always specify blocks in block base numbering
blk(on,0:3,0:3,0:7)

# tag boundary faces
tag("xMinFaces",face,(0:0,0:4,0:8))
tag("xMaxFaces",face,(4:4,0:4,0:8))
tag("yMinFaces",face,(0:4,0:0,0:8))
tag("yMaxFaces",face,(0:4,4:4,0:8))
tag("zMinFaces",face,(0:4,0:4,0:0))
tag("zMaxFaces",face,(0:4,0:4,8:8))

# define number of zones in each axis
numzones(28,28,28)

#Hex subdivisions
sub(10%,0:3, 0:3, 0:7,(7,0,0,0)) #7 hex
seed(10)

