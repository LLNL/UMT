#processor block decomposition
sms(6,8,8)
#Always specify blocks in block base numbering
blk(on,0:5,0:7,0:7)

# tag boundary faces
tag("xMinFaces",face,(0:0,0:8,0:8))
tag("xMaxFaces",face,(6:6,0:8,0:8))
tag("yMinFaces",face,(0:6,0:0,0:8))
tag("yMaxFaces",face,(0:6,8:8,0:8))
tag("zMinFaces",face,(0:6,0:8,0:0))
tag("zMaxFaces",face,(0:6,0:8,8:8))

# define number of zones in each axis
numzones(32,32,32)

#Hex subdivisions
sub(10%,0:5, 0:7, 0:7,(7,0,0,0)) #7 hex
seed(10)

